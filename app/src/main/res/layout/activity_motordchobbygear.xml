<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen_gradient"
    android:padding="16dp"
    tools:context=".motordchobbygear">

    <!-- หัวข้อ -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DC Gear Motor"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#3A3A3A"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ไอคอน/รูปเล็กด้านบน -->
    <ImageView
        android:id="@+id/motor_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/motordchobbygear"
        android:contentDescription="@string/app_name"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- คำอธิบาย -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:text="มอเตอร์ DC พร้อมเกียร์ทด เหมาะสำหรับโปรเจกต์หุ่นยนต์ ต้องจ่ายไฟ DC และควบคุมทิศทางด้วย H-Bridge"
        android:textColor="#424242"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/motor_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- รูปงานทดลอง: ซูม/ลากได้ด้วย ZoomImageView -->
    <com.example.electroniclearning.ZoomImageView
        android:id="@+id/motor_work"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:src="@drawable/motordchobbygearwork"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:contentDescription="@string/app_name"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button" />


    <!-- ปุ่ม Back (ให้ id = button ตามแพทเทิร์นหน้าอื่น เพื่อกัน NPE ที่โค้ดหา id นี้อยู่) -->
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
